<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.anubis.lectures.studentmngmtsys.model.RootLayoutController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="View Data">
                    <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleShowStudents" text="Display Students" />
                  <MenuItem mnemonicParsing="false" onAction="#handleShowCourses" text="Display Courses" />
                  <MenuItem mnemonicParsing="false" onAction="#handleShowEnrollments" text="Display Enrollments" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit Data">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Student Info" />
                  <MenuItem mnemonicParsing="false" text="Courses" />
                  <MenuItem mnemonicParsing="false" text="Student Enrollment" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Load Data" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save Data" />
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Close" />
              </items>
            </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>

   <right>
      <ScrollBar orientation="VERTICAL" prefHeight="210.0" prefWidth="14.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
       <HBox alignment="CENTER_LEFT" spacing="10">
           <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
           </padding>
           <Label fx:id="statusLabel" text="Ready" />
           <ProgressBar fx:id="progressBar" prefWidth="200" visible="false" />
       </HBox>
   </bottom>

</BorderPane>
