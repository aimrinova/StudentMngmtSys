<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.anubis.lectures.studentmngmtsys.HelloController">

    <top>
        <ToolBar>
            <Button onAction="#onHome" text="Home" />
            <Separator orientation="VERTICAL" />
            <Button onAction="#onSettings" text="Settings" />
            <Region HBox.hgrow="ALWAYS" />
            <ProgressIndicator fx:id="spinner" visible="false" />
        </ToolBar>
    </top>

    <center>
        <GridPane fx:id="buttonGrid" alignment="TOP_LEFT" hgap="15" vgap="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Button fx:id="btnDryRun" onAction="#onDryRun"
                    text="Dry Run" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button fx:id="btnScript1" onAction="#onScript1Rpa" text="Script1-RPA" GridPane.columnIndex="2" />
            <Button fx:id="btnFeature3" text="Feature 3" GridPane.columnIndex="3" />
            <Button fx:id="btnFeature4" text="Feature 4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button fx:id="btnFeature5" text="Feature 5" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id="btnFeature6" text="Feature 6" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label fx:id="statusLabel" text="Ready" />
            <ProgressBar fx:id="progressBar" prefWidth="200" visible="false" />
        </HBox>
    </bottom>
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="75.0" text="C1" />
                <TableColumn prefWidth="75.0" text="C2" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
   </left>

</BorderPane>
