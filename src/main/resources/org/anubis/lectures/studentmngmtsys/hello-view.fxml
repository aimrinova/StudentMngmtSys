<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.paint.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.anubis.lectures.studentmngmtsys.HelloController">

    <top>
        <ToolBar>
            <Button text="Home" onAction="#onHome" />
            <Separator orientation="VERTICAL" />
            <Button text="Settings" onAction="#onSettings" />
            <Region HBox.hgrow="ALWAYS" />
            <ProgressIndicator fx:id="spinner" visible="false" />
        </ToolBar>
    </top>

    <center>
        <GridPane fx:id="buttonGrid" hgap="15" vgap="15" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="btnDryRun" text="Dry Run" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#onDryRun" />
            <Button fx:id="btnScript1" text="Script1-RPA" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#onScript1Rpa" />
            <Button fx:id="btnFeature3" text="Feature 3" GridPane.rowIndex="0" GridPane.columnIndex="2" />
            <Button fx:id="btnFeature4" text="Feature 4" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Button fx:id="btnFeature5" text="Feature 5" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Button fx:id="btnFeature6" text="Feature 6" GridPane.rowIndex="1" GridPane.columnIndex="2" />
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready" />
            <ProgressBar fx:id="progressBar" prefWidth="200" visible="false" />
        </HBox>
    </bottom>

</BorderPane>