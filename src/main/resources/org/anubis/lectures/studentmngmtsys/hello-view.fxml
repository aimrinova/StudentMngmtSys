<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.anubis.lectures.studentmngmtsys.HelloController">

    <!-- top: your MenuBar (unchanged) -->
    <top>
        <MenuBar opacity="0.89">
            <menus>
                <Menu text="File" mnemonicParsing="false">
                    <items>
                        <MenuItem text="Close" mnemonicParsing="false"/>
                    </items>
                </Menu>
                <Menu text="Edit" mnemonicParsing="false">
                    <items>
                        <MenuItem text="Delete" mnemonicParsing="false"/>
                    </items>
                </Menu>
                <Menu text="Help" mnemonicParsing="false">
                    <items>
                        <MenuItem text="About" mnemonicParsing="false"/>
                    </items>
                </Menu>
            </menus>
            <effect>
                <DropShadow spread="0.77">
                    <color>
                        <Color red="0.075" green="0.034" blue="0.658"/>
                    </color>
                </DropShadow>
            </effect>
        </MenuBar>
    </top>

    <!-- center: your old VBox (with all its properties intact) -->
    <center>
        <VBox alignment="CENTER"
              maxHeight="-Infinity" maxWidth="-Infinity"
              minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="740.0" prefWidth="740.0"
              spacing="20.0">

            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <Label fx:id="welcomeText"/>

            <Button text="Add Student" alignment="TOP_LEFT" mnemonicParsing="false"/>
            <Button text="Update Student" onAction="#onHelloButtonClick"/>

            <TableView prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn text="C1" prefWidth="75.0"/>
                    <TableColumn text="C2" prefWidth="75.0"/>
                </columns>
            </TableView>

            <LineChart prefHeight="181.0" prefWidth="697.0">
                <xAxis>
                    <CategoryAxis side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT"/>
                </yAxis>
            </LineChart>

        </VBox>
    </center>

</BorderPane>
