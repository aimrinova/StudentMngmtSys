<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.anubis.lectures.studentmngmtsys.controller.AllCoursesController">
   <children>
      <TableView fx:id="courseTable"
                 prefHeight="600.0" prefWidth="700.0"
                 AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
         <columns>
            <TableColumn fx:id="courseIdColumn"   prefWidth="88.0"  text="Course ID" />
            <TableColumn fx:id="courseTitleColumn"   prefWidth="103.0" text="Course Title" />
            <TableColumn fx:id="courseDescriptionColumn"    prefWidth="90.0"  text="Description" />
            <TableColumn fx:id="courseValueColumn"  prefWidth="157.0" text="Course Credits" />
            <TableColumn fx:id="courseVolumeColumn"     prefWidth="71.0"  text="Estimated study hours" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
